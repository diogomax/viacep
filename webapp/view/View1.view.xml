<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ViaCEP.controller.View1" displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
				    <SearchField width="100%" placeholder="CEP" id="__field0" search="onSearchCEP"/>
				    <sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="__form0" title="Dados de entrega">
				        <sap.ui.layout.form:formContainers>
				            <sap.ui.layout.form:FormContainer title="Endereço" id="__container0">
				                <sap.ui.layout.form:formElements>
				                    <sap.ui.layout.form:FormElement label="Logradouro" id="_element1">
				                        <sap.ui.layout.form:fields>
				                            <Input busy="{modeloLocal>/state/busy}" value="{/logradouro}" id="logradouro" enabled="false"/>
				                            <Input width="100%" id="numero" placeholder="Número"/>
				                            <Input width="100%" id="complemento" placeholder="Complemento"/>
				                        </sap.ui.layout.form:fields>
				                    </sap.ui.layout.form:FormElement>
				                    <sap.ui.layout.form:FormElement label="Localidade" id="_element2">
				                        <sap.ui.layout.form:fields>
				                            <Input busy="{modeloLocal>/state/busy}" value="{/bairro}" id="bairro" enabled="false"/>
				                            <Input busy="{modeloLocal>/state/busy}" value="{/localidade}" id="localidade" enabled="false"/>
				                            <Input busy="{modeloLocal>/state/busy}" value="{/uf}" id="uf" enabled="false"/>
				                        </sap.ui.layout.form:fields>
				                    </sap.ui.layout.form:FormElement>
				                </sap.ui.layout.form:formElements>
				            </sap.ui.layout.form:FormContainer>
				        </sap.ui.layout.form:formContainers>
				        <sap.ui.layout.form:layout>
				            <sap.ui.layout.form:ResponsiveGridLayout id="__layout0"/>
				        </sap.ui.layout.form:layout></sap.ui.layout.form:Form>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>